  <li><a href="{{ path('gasto_index') }}">Gasto</a></li>
  <li class="active">Ver</li>
</ol>
{% endblock %}

{% block body -%}
    <h3>Ver Gasto</h3>

    <table class="records_properties table table-striped">
        <tbody>
            <tr>
                <th>Área</th>
                <td>{{ entity.area }}</td>
            </tr>
            <tr>
                <th>Mes</th>
                <td>{{ entity.mes }}</td>
            </tr>
            <tr>
                <th>Año</th>
                <td>{{ entity.anno }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ entity.tipo }}</td>
            </tr>
            <tr>
                <th>Monto (en $)</th>
                <td>${{ entity.valor | number_format(3, ',','.') }}</td>
            </tr>
            <tr>
                <th>Categoría</th>
                <td>{{ entity.categoria }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

