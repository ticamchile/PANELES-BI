<p class="text-left">
{% if ('edit' in actions) and (not hide_edit) %}
    <a href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': entity.id }) }}" }}">
      <button type="button" class="btn btn-default btn-xs">
        <span class="glyphicon glyphicon-edit"></span> Editar
      </button>
    </a>
{% endif %}

{% if ('delete' in actions) and (not hide_delete) %}
        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_delete', { 'id': entity.id, 'token': csrf.generateCsrfToken('entity' ~ entity.id) }) }}" }}" class="confirm">
                    <button type="button" class="btn btn-default btn-xs">
                      <span class="glyphicon glyphicon-trash"></span> Borrar
                    </button>
                  </a>
{% endif %}                  
</p>


